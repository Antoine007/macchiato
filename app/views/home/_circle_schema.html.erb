    });


    function initSpiral() {
       if ($( "#spiral" ).hasClass("col-lg-12")) {
        $( "#spiral" ).toggleClass("col-lg-12 col-lg-8");
        $( ".text" ).addClass("col-lg-4");
      }
    };

    function hideOthers(myself) {
      if (myself != "stimulation") {
        $( "#stimulation" ).hide();
      }
      if (myself != "bonhomme") {
        $( "#bonhomme" ).hide();
      }
      if (myself != "ideation") {
        $( "#ideation" ).hide();
      }
