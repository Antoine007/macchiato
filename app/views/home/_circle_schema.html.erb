      }
      if (myself != "market") {
        $( "#market" ).hide();
      }
      if (myself != "sustain") {
        $( "#sustain" ).hide();
      }
    };

    function animateIfNoteOpen(el) {
      if ( !el.is(":visible") ) {
        el.fadeIn();
      }
    };


});



