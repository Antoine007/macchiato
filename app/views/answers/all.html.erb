
<div class = "container">

  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4"><h2 class="text-center"><%= t('all_personnalities') %></h2></div>
    <div class="col-md-4"></div>
  </div>


  <%= for i in (1..4) do %>
    <div class="row" style="height:200px">
      <div class="col-md-6">
        <h3 class = "text-center"><%= t('category' + i.to_s) %></h3>
        <br>
        <p class = "text-center"><%= t('category' + i.to_s + '_text') %></p>
      </div>

      <div class="col-md-6">
        <h3 class = "text-center"><%= t('category' + (i+4).to_s) %></h3>
        <br>
        <p class = "text-center"><%= t('category' + (i+4).to_s + '_text') %></p>
      </div>
    </div>
  <% end %>

</div>


